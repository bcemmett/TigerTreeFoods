@model LoyaltyProgramManagement.Models.ViewModels.ProductsTableModel
@{
    ViewBag.Title = "Products";
}

<div class="row" id="searchSettings">
    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Description)</td>
                <td>@Html.TextBoxFor(m => m.Description)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Barcode)</td>
                <td>@Html.TextBoxFor(m => m.Barcode)</td>
            </tr>
            <tr>
                <td></td>
                <td style="padding-top: 10px;">
                    <input type="submit" value="Search" />
                </td>
            </tr>
        </table>
    }
</div>
@if (@Model.Products != null)
{
    <div class="row" id="search-results">
        @Html.Partial("ProductsTable", @Model.Products)
    </div>
}