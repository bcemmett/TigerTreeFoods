@model LoyaltyProgramManagement.Models.ViewModels.ProductsTableModel
@{
    ViewBag.Title = "Products";
}
<h1>Product Search</h1>
<div class="row" id="search-area">
    @using (Html.BeginForm("Products", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Description, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Barcode, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Barcode, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Search</button>
            </div>
        </div>
    }
</div>
@if (@Model.Products != null)
{
    <div class="row" id="search-results">
        @Html.Partial("ProductsTable", @Model.Products)
    </div>
}